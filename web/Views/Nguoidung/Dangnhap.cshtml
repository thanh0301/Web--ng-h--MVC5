
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/Dangnhap.cshtml";
}


<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<body style="background: linear-gradient(0.25turn, #3f87a6, #ebf8e1, #f69d3c);">
    <table style="display: block; text-align: center; margin-left: 574px; ">
        <h3 style="text-align:center"> Đăng Nhập</h3>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:50px ; width:150px">
                <td style="padding-right:15px"> Tên đăng nhập</td>
                <td>
                    @Html.TextBox("TenDN")
                    @ViewData["loi1"]
                </td>
            </tr>
            <tr style="height:50px ; width:150px">
                <td> Mậu khẩu</td>
                <td>
                    @Html.Password("Matkhau")
                    @ViewData["loi2"]
                </td>
            </tr>


            <tr style="height:40px;margin-left:20px ">
                <td>
                    <input id="bttt" class="btn btn-success" type="Submit" value="Đăng Nhập" />
                </td>
            </tr>


        }

    </table>

</body>





